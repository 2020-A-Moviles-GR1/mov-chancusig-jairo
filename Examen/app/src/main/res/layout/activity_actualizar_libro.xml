<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarLibroActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtICBN" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreLibro" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtICBN"
            app:layout_constraintEnd_toEndOf="@+id/txtICBN" app:layout_constraintStart_toStartOf="@+id/txtICBN"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEditorial" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreLibro"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreLibro" app:layout_constraintStart_toStartOf="@+id/txtNombreLibro"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtnumEdicion"
            app:layout_constraintEnd_toEndOf="@+id/txtEditorial" app:layout_constraintStart_toStartOf="@+id/txtEditorial"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtEditorial"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtfechaPublicacion"
            app:layout_constraintEnd_toEndOf="@+id/txtnumEdicion" app:layout_constraintStart_toStartOf="@+id/txtnumEdicion"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtnumEdicion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumPaginas"
            app:layout_constraintEnd_toEndOf="@+id/txtfechaPublicacion" app:layout_constraintStart_toStartOf="@+id/txtfechaPublicacion"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtfechaPublicacion"/>
    <Button
            android:text="Actualizar Libro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActualizarLibro" app:layout_constraintStart_toStartOf="@+id/txtNumPaginas"
            app:layout_constraintEnd_toEndOf="@+id/txtNumPaginas" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNumPaginas" app:layout_constraintHorizontal_bias="0.504"/>

    <Button
            android:id="@+id/btnEliminarLibro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Eliminar Libro"
            app:layout_constraintEnd_toEndOf="@+id/btnActualizarLibro"
            app:layout_constraintStart_toStartOf="@+id/btnActualizarLibro"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizarLibro" />
</android.support.constraint.ConstraintLayout>